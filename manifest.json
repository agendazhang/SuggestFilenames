{
    "name": "PDF Name Suggestor",
    "version": "1.0",
    "description": "Suggest file names for PDF files for a user to save.",
    "manifest_version": 2,

    "content_scripts": [
        {
            "matches": [
                "http://*/*.pdf",
                "https://*/*.pdf",
                "file://*/*.pdf"
            ],
            "js": ["content.js",
                   "detailExtractor.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_icon": "ct.png",
        "default_popup": "popup.html",
        "default_title": "Suggest file names!"
    },
    "permissions": ["history", "tabs", "storage", "declarativeContent"]
}
